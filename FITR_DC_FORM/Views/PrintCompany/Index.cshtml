@model List<PrintCompanyModel>

@{
    ViewData["Title"] = "Print Company List";
}

<h2>Print Company List</h2>

<a asp-action="Create" class="btn btn-success mb-3 text-end ">Add New Company</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Company Name</th>
            <th>Address</th>
            <th>Logo</th>
            <th>Status</th>
            <th width="180px">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CompanyName</td>
                <td>@item.CompanyAddress</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.CompanyLogo))
                    {
                        <img src="~/uploads/@item.CompanyLogo" width="60" />
                    }
                </td>
                <td>
                    @(item.IsActive ? "Active" : "Inactive")
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PrintCompanyId"
                       class="btn btn-sm btn-warning">Edit</a>

                  @*   <a asp-action="Delete" asp-route-id="@item.PrintCompanyId"
                       class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure?')">Delete</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>
