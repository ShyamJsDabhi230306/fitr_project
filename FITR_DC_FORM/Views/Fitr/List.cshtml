                                                        <td class="col-model text-start">@dc.Model</td>

                                                      @*   <td class="col-status text-center">
                                                            @if (dc.Status == "DRAFT")
                                                            {
                                                                <span class="badge bg-secondary">Draft</span>
                                                            }
                                                            else if (dc.Status == "SUBMITTED")
