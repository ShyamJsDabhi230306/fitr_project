    <script>
        // ✅ GLOBAL CONFIRMATION HELPER (Professional SweetAlert2 Modals)
        document.addEventListener('DOMContentLoaded', function () {
            
            // 1. Intercept `onclick="return confirm(...)"` (Links & Buttons)
            const confirmClicks = document.querySelectorAll('[onclick*="confirm"]');
            confirmClicks.forEach(el => {
                const originalCode = el.getAttribute('onclick');
                // Regex to extract message, handling single/double quotes
                const match = originalCode.match(/confirm\s*\(\s*['"]([^'"]+)['"]\s*\)/);
                const message = match ? match[1] : 'Are you sure you want to proceed?';

                // Remove the old handler to prevent native alert
                el.removeAttribute('onclick');
                
                // Add new listener
                el.addEventListener('click', function(e) {
                    e.preventDefault();
                    showConfirmModal(message, () => {
                        if (el.tagName === 'A') {
                            window.location.href = el.href;
                        } else if (el.type === 'submit') {
                            // If it's a submit button, we need to submit the form
                            el.closest('form').submit();
                        }
                    });
                });
            });

            // 2. Intercept `onsubmit="return confirm(...)"` (Forms)
            const confirmForms = document.querySelectorAll('form[onsubmit*="confirm"]');
            confirmForms.forEach(form => {
                const originalCode = form.getAttribute('onsubmit');
                const match = originalCode.match(/confirm\s*\(\s*['"]([^'"]+)['"]\s*\)/);
                const message = match ? match[1] : 'Are you sure you want to proceed?';

                form.removeAttribute('onsubmit');

                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    showConfirmModal(message, () => {
                        form.submit();
                    });
                });
            });

            // 3. Support `data-confirm="Message"` attribute (Recommended)
            document.body.addEventListener('click', function(e) {
                const trigger = e.target.closest('[data-confirm]');
                if (!trigger) return;

                e.preventDefault();
                e.stopPropagation(); // Stop propagation to prevent headers etc getting clicked

                const message = trigger.getAttribute('data-confirm');
                
                showConfirmModal(message, () => {
                   if (trigger.tagName === 'A') {
                       window.location.href = trigger.href;
                   } else if (trigger.type === 'submit' || trigger.closest('form')) {
                       // Check if it's inside a form and triggers submission
                       const form = trigger.closest('form');
                       if (form) form.submit();
                   }
                });
            });

            // Reusable function for the modal
            function showConfirmModal(message, onConfirm) {
                Swal.fire({
                    title: 'Confirmation Required',
                    text: message,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#7366ff',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, Confirm',
                    cancelButtonText: 'Cancel',
                    focusCancel: true,
                    buttonsStyling: false, // Use our CSS/Bootstrap classes
                    customClass: {
                        confirmButton: 'btn btn-lg btn-primary me-2', // Solid primary
                        cancelButton: 'btn btn-lg btn-danger',
                        popup: 'animated fadeInDown faster'
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        onConfirm();
                    }
                });
            }
        });
    </script>

