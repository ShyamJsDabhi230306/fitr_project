@model List<FITR_DC_FORM.Models.UserMaster>

@{
    ViewData["Title"] = "User List";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">User List</h5>
        <a asp-action="Create" class="btn btn-success btn-sm">+ Add User</a>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-bordered table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Company</th>
                        <th>Location</th>
                        <th>Full Name</th>
                        <th>User Name</th>
                        <th>Role</th>
                        <th>Signature</th>
                        <th>Signed On</th>
                        <th style="width:120px" class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var u in Model)
                        {
                            <tr>
                                <td>@u.CompanyName</td>
                                <td>@u.LocationName</td>
                                <td>@u.FullName</td>
                                <td>@u.UserName</td>
                                <td>
                                    <span class="badge bg-info text-white">
                                        @u.UserRole
                                    </span>
                                </td>

                                <!-- Signature Status -->
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(u.SignaturePath))
                                    {
                                        <img src="@u.SignaturePath"
                                             title="Signature uploaded"
                                             style="height:35px" />
                                    }
                                    else
                                    {
                                        <span class="text-danger">Not Added</span>
                                    }
                                </td>

                                <!-- Signed On -->
                                <td>
                                    @if (u.SignedOn.HasValue)
                                    {
                                        @u.SignedOn.Value.ToString("dd-MMM-yyyy hh:mm tt")
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>

                                <td class="text-center">
                                    <a asp-action="Create"
                                       asp-route-id="@u.UserId"
                                       class="btn btn-sm btn-primary">
                                        Edit
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">
                                No users found
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
