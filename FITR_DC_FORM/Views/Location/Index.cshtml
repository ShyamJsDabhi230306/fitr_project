@model IEnumerable<LocationMaster>

@{
    ViewData["Title"] = "Location Management";
}

<style>
    .master-list-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
    }

    .master-list-card .card-header {
        background: #fff;
        border-bottom: 1px solid #f0f0f0;
        padding: 20px 25px;
        border-radius: 12px 12px 0 0;
    }

    #master-table th {
        background-color: #f8f9fa;
        color: #495057;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
        border-bottom: 2px solid #dee2e6;
    }

    #master-table td {
        vertical-align: middle;
        font-size: 0.9rem;
        color: #2c3e50;
    }

    .action-btn {
        width: 32px;
        height: 32px;
        padding: 0;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        transition: all 0.2s;
    }

    .action-btn:hover {
        transform: translateY(-2px);
    }
</style>

<div class="container-fluid py-4">
    <div class="card master-list-card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0 fw-bold text-primary"><i class="fa fa-location-dot me-2"></i> Location Management</h4>
            <a asp-action="Create" class="btn btn-primary d-flex align-items-center gap-2">
                <i class="fa fa-plus-circle"></i> Add New Location
            </a>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="master-table">
                    <thead>
                        <tr>
                            <th class="ps-4">Associated Company</th>
                            <th>Location Name</th>
                            <th class="text-center pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold fs-6">@item.CompanyName</div>
                                        <div class="text-muted small">Parent Entity</div>
                                    </td>
                                    <td>
                                        <div class="fw-bold"><i class="fa fa-map-pin me-2 text-primary small"></i> @item.LocationName</div>
                                    </td>
                                    <td class="text-center pe-4">
                                        <div class="d-flex justify-content-center gap-2">
                                            <a asp-action="Edit" asp-route-id="@item.LocationId"
                                               class="btn btn-sm btn-info text-white action-btn" title="Edit Location">
                                                <i class="fa fa-pencil"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center py-5 text-muted">
                                    <i class="fa fa-map-location-dot fa-3x mb-3 d-block"></i>
                                    No locations documented.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
