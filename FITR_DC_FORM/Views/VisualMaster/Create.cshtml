@model FITR_DC_FORM.Models.FitrVisualMaster

@{
    bool isEdit = Model.VisualMasterId > 0;
    ViewData["Title"] = isEdit ? "Edit Visual Item" : "Create Visual Item";
}

<h4 class="mb-3">@ViewData["Title"]</h4>

<form asp-action="@(isEdit ? "Edit" : "Create")" method="post">

    <!-- Hidden key -->
    <input type="hidden" asp-for="VisualMasterId" />

    <div class="mb-3">
        <label asp-for="VisualItemName" class="form-label"></label>
        <input asp-for="VisualItemName"
               class="form-control"
               placeholder="Enter visual inspection item name" />
        <span asp-validation-for="VisualItemName" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">
            @(isEdit ? "Update" : "Save")
        </button>

        <a asp-action="Index" class="btn btn-secondary ms-2">
            Back
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
