    <script>
                $(document).ready(function () {

            // 1️⃣ DESTROY if already initialized
            if ($.fn.DataTable.isDataTable("#roles-permission")) {
                $("#roles-permission").DataTable().destroy();
            }

            // 2️⃣ INITIALIZE WITHOUT SELECT EXTENSION
            const table = $("#roles-permission").DataTable({

                // ❌ DO NOT USE render.select
                columnDefs: [
                    {
                        targets: 0,
                        orderable: false,
                        searchable: false,
                        defaultContent: ""   // keep column but no checkbox
                    }
                ],

                // ❌ DO NOT ENABLE select
                select: false,

                order: [[1, "asc"]],
                pageLength: 20,
                responsive: true,
                autoWidth: false,
                lengthMenu: [20, 50, 100,1000],

                layout: {
                    topEnd: {
                        search: {
                            placeholder: "Search here..."
                        }
                    }
                }
            });

            // 3️⃣ HARD REMOVE ANY CHECKBOX IF PLUGIN INJECTS AGAIN
            table.on('draw', function () {
                $('dt-select-checkbox').remove();
                $('dt-select-checkbox').removeClass('dt-select-checkbox');
            });

        });

    </script>

    <script>
        // Select / deselect all
        $("#selectAll").on("change", function () {
            $(".row-check").prop("checked", this.checked);
        });

        // SINGLE BUTTON HANDLES BOTH CASES
        $("#btnPrint").on("click", function () {

            let ids = $(".row-check:checked").map(function () {
                return $(this).val();
            }).get();

            if (ids.length === 0) {
                alert("Please select at least one record to print.");
                return;
            }

            // ✅ ONE record → Single print
            if (ids.length === 1) {
                window.open('/Fitr/Print/' + ids[0], '_blank');
                return;
            }

            // ✅ MORE than one → Bulk print
            window.open('/Fitr/PrintMultiple?ids=' + ids.join(','), '_blank');


        });



    </script>




   

